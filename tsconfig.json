{
    // 编译器配置
  "compilerOptions": {
    // 根目录
    "rootDir": ".",
    // 严格模式
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    // JS语言版本
    "target": "ES5",
    // 允许未读取的局部变量
    "noUnusedLocals": false,
    // 允许未读取的参数
    "noUnusedParameters": false,
    "resolveJsonModule": true,
    // 支持语法迭代
    "downlevelIteration": true,
    // 允许使用隐式的any类型
    "noImplicitAny": false,
    // 模块化
    "module": "ESNext",
    // ts转js时，删除所有注释
    "removeComments": false,
    // 禁用sourceMap
    "sourceMap": false,
    "lib": ["ESNext","DOM"],
    "baseUrl": ".",
    "paths": {
        "@vue/*":[
            "packages/*/src"
        ]
    }
  },
    // 入口
    "include": [
        "packages/*/src"
    ]
}
